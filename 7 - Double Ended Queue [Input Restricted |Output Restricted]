#include <stdio.h>
#define SIZE 5

int DQ[SIZE];
int front = -1, rear = -1;

// Check if deque is full
int isFull() {
    return (front == 0 && rear == SIZE - 1) || (front == rear + 1);
}

// Check if deque is empty
int isEmpty() {
    return (front == -1);
}

// Insert at rear
void insert_rear() {
    int item;
    if (isFull()) {
        printf("Deque is full.\n");
        return;
    }
    printf("Enter element to insert at rear: ");
    scanf("%d", &item);

    if (isEmpty()) {
        front = rear = 0;
    } else if (rear == SIZE - 1) {
        rear = 0;
    } else {
        rear++;
    }
    DQ[rear] = item;
}

// Insert at front
void insert_front() {
    int item;
    if (isFull()) {
        printf("Deque is full.\n");
        return;
    }
    printf("Enter element to insert at front: ");
    scanf("%d", &item);

    if (isEmpty()) {
        front = rear = 0;
    } else if (front == 0) {
        front = SIZE - 1;
    } else {
        front--;
    }
    DQ[front] = item;
}

// Delete from front
void delete_front() {
    if (isEmpty()) {
        printf("Deque is empty.\n");
        return;
    }
    printf("Deleted from front: %d\n", DQ[front]);

    if (front == rear)
        front = rear = -1;
    else if (front == SIZE - 1)
        front = 0;
    else
        front++;
}

// Delete from rear
void delete_rear() {
    if (isEmpty()) {
        printf("Deque is empty.\n");
        return;
    }
    printf("Deleted from rear: %d\n", DQ[rear]);

    if (front == rear)
        front = rear = -1;
    else if (rear == 0)
        rear = SIZE - 1;
    else
        rear--;
}

// Display elements
void display_queue() {
    if (isEmpty()) {
        printf("Deque is empty.\n");
        return;
    }

    printf("Deque elements: ");
    int i = front;
    while (1) {
        printf("%d ", DQ[i]);
        if (i == rear)
            break;
        if (i == SIZE - 1)
            i = 0;
        else
            i++;
    }
    printf("\n");
}

// Input-restricted deque: insert only at rear, delete from both ends
void input_restricted() {
    int ch;
    do {
        printf("\n--- Input Restricted Deque ---\n");
        printf("1. Insert at rear\n");
        printf("2. Delete from front\n");
        printf("3. Delete from rear\n");
        printf("4. Display\n");
        printf("5. Exit\n");
        printf("Enter choice: ");
        scanf("%d", &ch);

        switch (ch) {
            case 1: insert_rear(); break;
            case 2: delete_front(); break;
            case 3: delete_rear(); break;
            case 4: display_queue(); break;
            case 5: break;
            default: printf("Invalid choice.\n");
        }
    } while (ch != 5);
}

// Output-restricted deque: insert at both ends, delete only from front
void output_restricted() {
    int ch;
    do {
        printf("\n--- Output Restricted Deque ---\n");
        printf("1. Insert at front\n");
        printf("2. Insert at rear\n");
        printf("3. Delete from front\n");
        printf("4. Display\n");
        printf("5. Exit\n");
        printf("Enter choice: ");
        scanf("%d", &ch);

        switch (ch) {
            case 1: insert_front(); break;
            case 2: insert_rear(); break;
            case 3: delete_front(); break;
            case 4: display_queue(); break;
            case 5: break;
            default: printf("Invalid choice.\n");
        }
    } while (ch != 5);
}

// Main
int main() {
    int choice;
    printf("1. Input Restricted Deque\n");
    printf("2. Output Restricted Deque\n");
    printf("Enter your choice: ");
    scanf("%d", &choice);

    switch (choice) {
        case 1: input_restricted(); break;
        case 2: output_restricted(); break;
        default: printf("Invalid choice.\n");
    }

    return 0;
}
